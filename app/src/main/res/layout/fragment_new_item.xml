<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewmodel"
            type="com.dalydays.android.reminderlist.ui.newitem.NewItemViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/add_item_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.newitem.NewItemFragment">

        <EditText
            android:id="@+id/description_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:ems="10"
            android:hint="@string/edit_description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Switch
            android:id="@+id/switch_recurring"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:checked="false"
            android:text="@string/edit_recurring"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/description_input" />

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/btn_group_time_interval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Days" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_weeks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weeks" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_months"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Months" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_years"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Years" />

        </com.google.android.material.button.MaterialButtonToggleGroup>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>